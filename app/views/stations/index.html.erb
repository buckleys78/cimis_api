<h1>Stations Listing</h1>

<p>
  Download:
  <%= link_to "CSV", stations_path(format: "csv") %>
  <%= link_to "Excel", stations_path(format: "xls") %>
</p>

<table>
  <thead>
    <tr>
      <th><%= sortable "id", "Station ID" %></th>
      <th><%= sortable "station_nbr", "Station Nbr" %></th>
      <th><%= sortable "name" %></th>
      <th><%= sortable "county" %></th>
      <th><%= sortable "is_active", "Is active" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stations.each do |station| %>
      <tr>
        <td><%= station.id %></td>
        <td><%= station.station_nbr %></td>
        <td><%= station.name %></td>
        <td><%= station.county %></td>
        <td><%= station.is_active %></td>
        <td><%= link_to 'Show', station %></td>
        <td><%= link_to 'Edit', edit_station_path(station) %></td>
        <td><%= link_to 'Destroy', station, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_tag import_stations_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>

<br>

<%= link_to 'New Station', new_station_path %>
